<fr.and1droid.starpedia.view.PlanetRowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        tools:src="@drawable/ic_diameter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/value"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="16sp"
            tools:context="fr.and1droid.starpedia.PlanetFragment"
            tools:text="8900 km" />

        <TextView
            android:id="@+id/key"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/darker_gray"
            android:gravity="top"
            android:textSize="14sp"
            tools:context="fr.and1droid.starpedia.PlanetFragment"
            tools:text="Diameter" />


    </LinearLayout>
</fr.and1droid.starpedia.view.PlanetRowView>